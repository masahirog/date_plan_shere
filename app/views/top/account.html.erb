
<div class="account-img col-xs-3">
  <% if current_user.image.present? %>
    <img src="<%= asset_path "#{current_user.image}" %>" />
  <% else %>
    <img src="<%= asset_path "no_image.png" %>" />
  <% end %>
</div>

<div class='col-xs-9'>
  <div class=''>
    <div class='form-group'>
      @<%= current_user.nickname %>
    </div>
    <div class='form-group'>
      <%= current_user.name %>
    </div>
    <div class='form-group'>
      <%= current_user.email %>
    </div>
  </div>
</div>

  <div class='login_link text-center col-xs-12' style="margin-top:50px;">
    <%= link_to edit_user_registration_path, class: "btn btn-default col-md-4" do %>
      <span class=""></span> 編集する
    <% end %>
  </div>

<div class="text-center col-xs-12" style="margin-top:30px;">
  <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, data: {confirm: "ログアウトしますか？"} %>
</div>
