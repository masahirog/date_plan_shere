<div class='login_back'>
  <div class='log-in col-md-4 col-md-offset-4 text-center'>
    <h2>ログイン</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, placeholder: 'メールアドレス', class: 'input form-control' %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: 'off', placeholder: 'パスワード', class: 'input form-control' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class='checkbox' style="margin-bottom:20px;">
            <label>
              <input id='user_remember_me' name='user[remember_me]' type='checkbox' value='1'>
              <%= f.label :remember_me, 'ログイン情報を記憶する', class: 'memory-check' %>
            </label>
        </div>
      <% end %>

      <div>
        <%= f.submit class: 'btn btn-primary withripple col-md-12', value: 'ログイン' %>
      </div>
    <% end %>
  </div>
  <div class="pull-right">
    <%= link_to "TOP画面", "/" %>
  </div>
</div>
